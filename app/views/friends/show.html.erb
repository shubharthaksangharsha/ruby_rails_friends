

<div class="jumbotron">
  <h1 class="display-4">
  <%= @friend.first_name %>
  <%= @friend.last_name %>
  </h1>
  <p class="lead">
  	<%= @friend.phone %> |  
  	<%= @friend.twitter %>
  </p>
  <br/>
  <div class="d-flex flex-rows ">
  <%= link_to "Edit", edit_friend_path(@friend), class:'btn btn-secondary mr-2 '%> 

  <%= button_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger mr-2'%>

  <%= link_to "Back", friends_path, class:'btn btn-secondary' %>
  </div>
</div> 

